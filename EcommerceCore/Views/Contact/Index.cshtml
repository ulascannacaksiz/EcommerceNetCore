@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="page-content">
    <div id="map" class="mb-5"></div><!-- End #map -->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>Ofis</h3>

                    <address>1 New York Plaza, New York, <br>NY 10004, USA</address>
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->

            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>İletişim</h3>

                    <div><a href="mailto:#">info@ulascannacaksiz.com</a></div>
                    <div><a href="tel:#">+90 123-456-7899</a>, <a href="tel:#">+90 123-456-7899</a></div>
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->

            <div class="col-md-4">
                <div class="contact-box text-center">
                    <h3>Sosyal Medya Hesaplarımız</h3>

                    <div class="social-icons social-icons-color justify-content-center">
                        <a href="#" class="social-icon social-facebook" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
                        <a href="#" class="social-icon social-twitter" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
                        <a href="#" class="social-icon social-instagram" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
                        <a href="#" class="social-icon social-youtube" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
                        <a href="#" class="social-icon social-pinterest" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
                    </div><!-- End .soial-icons -->
                </div><!-- End .contact-box -->
            </div><!-- End .col-md-4 -->
        </div><!-- End .row -->

        <hr class="mt-3 mb-5 mt-md-1">
        <div class="touch-container row justify-content-center">
            <div class="col-md-9 col-lg-7">
                <div class="text-center">
                    <h2 class="title mb-1">İletişimde kalın</h2><!-- End .title mb-2 -->
                    <p class="lead text-primary">
                        Bizimle paylaşmak istediğiniz düşüncelerinizi form aracılığı ile gönderebilirsiniz.
                    </p><!-- End .lead text-primary -->
                    <p class="mb-3">Düşünceleriniz bizim için önemli en kısa sürede tarafınıza geri dönüş sağlanacaktır.</p>
                </div><!-- End .text-center -->

                <form method="post" class="contact-form mb-2">
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="cname" class="sr-only">Name</label>
                            <input type="text" name="NameSurname" class="form-control" id="cname" placeholder="İsim *" required>
                        </div><!-- End .col-sm-4 -->

                        <div class="col-sm-4">
                            <label for="cemail" class="sr-only">Name</label>
                            <input type="email" name="Email" class="form-control" id="cemail" placeholder="Email *" required>
                        </div><!-- End .col-sm-4 -->

                        <div class="col-sm-4">
                            <label for="cphone" class="sr-only">Phone</label>
                            <input type="tel" name="Phone" class="form-control" id="cphone" placeholder="Telefon">
                        </div><!-- End .col-sm-4 -->
                    </div><!-- End .row -->

                    <label for="csubject" class="sr-only">Subject</label>
                    <input type="text" name="Title" class="form-control" id="csubject" placeholder="Konu">

                    <label for="cmessage" class="sr-only">Message</label>
                    <textarea class="form-control" name="Message" cols="30" rows="4" id="cmessage" required placeholder="Mesaj *"></textarea>

                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm">
                            <span>Gönder</span>
                            <i class="icon-long-arrow-right"></i>
                        </button>
                    </div><!-- End .text-center -->
                </form><!-- End .contact-form -->
            </div><!-- End .col-md-9 col-lg-7 -->
        </div><!-- End .row -->
    </div><!-- End .container -->
</div>
